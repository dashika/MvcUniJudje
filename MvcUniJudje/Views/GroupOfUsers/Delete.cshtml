@model List<MvcUniJudje.WebReference.GroupDTO>

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы действительно желаете удалить ?</h3>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
<fieldset style="left:3%; width:94%;">
    <legend>Удаляемые группы</legend>

<table>
    <tr>
        <th>
            @Html.DisplayName("ID")
        </th>
        <th>
            @Html.DisplayName("Название группы")
        </th>
    </tr>

 @for (int i = 0; i < Model.Count(); i++) {
    <tr>
        <td>
             @Html.TextBoxFor(m => m[i].Id, new { @readonly = "readonly", @class = "border-color-white"})
        </td>
        <td>
             @Html.TextBoxFor(m => m[i].Title, new { @readonly = "readonly", @class = "border-color-white"})
        </td>

    </tr>
}

</table>
      <p>
        <input type="submit" value="Удалить" /> 
            </p>
        </fieldset>
        @Html.ActionLink("Вернуться назад", "Index")
}